<?xml version="1.0" encoding="utf-8"?>

<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/button_hover_background"
                android:endColor="@color/button_hover_background"
                android:angle="0" />
            <corners
                android:radius="3dp" />
            <stroke
                android:width="3dp"
                android:color="@color/button_stroke" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/button_hover_background"
                android:startColor="@color/button_hover_background"
                android:angle="0" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:endColor="@color/button_background"
                android:startColor="@color/button_background"
                android:angle="0" />
            <corners
                android:radius="3dp" />
        </shape>
    </item>
    
</selector>